<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/myfridgeBackgroundColor</item>


        <item name="android:textColor">@color/myfridgeTextColor</item>
        <item name="android:textSize">24sp</item>
        <item name="android:editTextColor">@color/myfridgeTextColor</item>
        <item name="android:textColorHint">@color/myfridgeTextHintColor</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">true</item>

        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/white</item>

    </style>

    <style name="ButtonStyle" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@color/colorButtonPrimaryDark</item>
        <item name="android:textColor">@color/myfridgeEditTextColor</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="AppTheme.ActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">#222222</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
